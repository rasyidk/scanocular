<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.scan.ScanResultActivity">

    <LinearLayout
        android:background="@color/gray3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_marginTop="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp">
                <Button
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_small"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_arrow_back_24"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/logo_sco"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="SCANOCULAR"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_small"
                        android:fontFamily="@font/poppins"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:background="@drawable/rounded_top_background"

            android:paddingTop="@dimen/text_size_xlager"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/margin_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil Uji"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_xlager"/>


            <LinearLayout
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Nama"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/scan_res_tv_name"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="nama"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Tanggal Lahir"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/scan_res_tv_tgl_lahir"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="NIK"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/scan_res_tv_NIK"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="NIK"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Alamat"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/scan_res_tv_Alamat"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Tanggal Tes"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/scan_res_tv_Tanggal_Tes"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Tes"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Hasil Tes"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/scan_res_tv_Hasil_Tes"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hasil Tes"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:layout_weight="1"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/gray1" />


            <TextView
                android:layout_marginTop="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_information"
                />


            <TextView
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uraian Penyakit"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cataract_information"
                />


        </LinearLayout>



    </LinearLayout>
</ScrollView>