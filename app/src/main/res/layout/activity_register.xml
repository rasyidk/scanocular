<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".activity.register.RegisterActivity">
    <ScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/login_welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Daftar Akun"
            android:textColor="@color/black"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/login_desc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_welcome_text"
            android:layout_centerInParent="true"
            android:layout_marginVertical="8dp"
            android:text="Pastikan ketelitian seluruh data diri anda"
            android:textAlignment="center"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/nik_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_desc_text"
            >
            <TextView
                android:id="@+id/nik_log_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="NIK"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_marginVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"

                />
            <EditText
                android:id="@+id/nik_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:autofillHints="emailAddress"
                android:layout_below="@+id/nik_log_label"
                android:background="@drawable/edit_text_bg"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                tools:ignore="LabelFor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nama_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nik_layout"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/nama_log_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Nama Lengkap"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_marginVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"

                />
            <EditText
                android:id="@+id/nama_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:autofillHints="emailAddress"
                android:layout_below="@+id/nama_log_label"
                android:background="@drawable/edit_text_bg"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                tools:ignore="LabelFor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ttl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_layout"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/ttl_log_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Tanggal Lahir"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_marginVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"

                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/ttl_log_label"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ttl_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="emailAddress"
                    android:editable="false"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingVertical="10dp"
                    tools:ignore="LabelFor" />
                <Button
                    android:id="@+id/btPickDate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_date_range_24"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ttl_layout"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/email_log_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Email"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_marginVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"

                />
            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:layout_below="@+id/email_log_label"
                android:background="@drawable/edit_text_bg"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                tools:ignore="LabelFor" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/alamat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_layout"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/alamat_log_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Alamat"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_marginVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"

                />
            <EditText
                android:id="@+id/alamat_field"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:layout_below="@+id/alamat_log_label"
                android:background="@drawable/edit_text_bg"
                android:paddingHorizontal="20dp"
                tools:ignore="LabelFor" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alamat_layout"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/password_log_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/password"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_marginVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:autofillHints="emailAddress"
                android:layout_below="@+id/password_log_label"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/edit_text_bg"
                tools:ignore="LabelFor" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/confirm_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_layout"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/confirm_log_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Konfirmasi"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_marginVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/confirm_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:autofillHints="emailAddress"
                android:layout_below="@+id/confirm_log_label"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/edit_text_bg"
                tools:ignore="LabelFor" />
        </RelativeLayout>
        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Aplikasi ini terintegrasi sistem blockchain. Seluruh data anda akan dijamin kerhasiaannya"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:layout_below="@+id/confirm_layout"
            android:layout_marginVertical="10dp"
            />
        <Button
            android:id="@+id/button_log"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Simpan Data"
            android:backgroundTint="@color/colorPrimary"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            />
        <TextView
            android:id="@+id/regtologin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/sudah_memiliki_akun_login"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:layout_below="@+id/button_log"
            android:layout_marginVertical="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>